<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rakesh.homey.Home"
    tools:showIn="@layout/activity_home">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="welcome to home"
        android:textColor="@color/DarkGreen"
        android:textSize="40dp"/>
    <Button
        android:id="@+id/bvigiting"
        android:onClick="vigiting"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:text="Visiting"
        android:textSize="50sp"
        android:background="#f5c0f2"
        android:textColor="@color/DarkBlue"
        tools:ignore="OnClick" />
    <Button
        android:id="@+id/bhosting"
        android:onClick="hosting"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:text="hosting"
        android:layout_marginTop="20sp"
        android:textSize="50sp"
        android:background="#a5d7e7"
        android:textColor="@color/DarkBlue"
        tools:ignore="OnClick" />

</LinearLayout>
